{
    "name": "yl-11ty",
    "version": "0.9.4",
    "description": "An 11ty starter kit",
    "scripts": {
        "build": "npm-run-all --sequential clean --parallel build:js build:scss --sequential build:eleventy",
        "build:eleventy": "ELEVENTY_ENV=production eleventy",
        "build:js": "npm-run-all --sequential compile:js minify:js",
        "build:scss": "npm-run-all --sequential compile:scss minify:scss",
        "clean": "del-cli _site",
        "compile:js": "rollup -c",
        "compile:scss": "sass --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "lint:js": "eslint src/js/**/*",
        "lint:scss": "stylelint --syntax scss src/scss/**/*.scss",
        "minify:js": "terser -c -m --source-map content=_site/js/main.js.map,includeSources,url=main.js.map -o _site/js/main.js -- _site/js/main.js",
        "minify:scss": "postcss --config .postcssrc.json _site/css/main.css -r",
        "start": "npm run watch",
        "watch": "npm-run-all --sequential clean --parallel watch:*",
        "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
        "watch:js": "rollup -c --watch",
        "watch:scss": "sass --watch --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "test": "npm-run-all --sequential lint:js lint:scss"
    },
    "dependencies": {
        "core-js": "^3.9.0",
        "luxon": "^1.26.0",
        "when-dom-ready": "^1.2.12"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.11.1",
        "@11ty/eleventy-navigation": "^0.1.6",
        "@11ty/eleventy-plugin-rss": "^1.1.0",
        "@babel/core": "^7.13.1",
        "@babel/preset-env": "^7.13.5",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "autoprefixer": "^10.2.4",
        "cssnano": "^4.1.10",
        "del-cli": "^3.0.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "html-minifier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.2.6",
        "postcss-cli": "^8.3.1",
        "postcss-flexbugs-fixes": "^5.0.2",
        "prettier": "^2.2.1",
        "rollup": "^2.40.0",
        "sass": "^1.32.8",
        "stylelint": "^13.11.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-scss": "^3.19.0",
        "terser": "^5.6.0"
    },
    "author": "Matthias Mees",
    "license": "MIT",
    "engines": {
        "node": ">=15"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:yellowled/yl-11ty.git"
    }
}
